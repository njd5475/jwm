
RootMenu onroot=12
	Program icon=terminal.png label=Terminal exec=xterm
	Menu icon=folder.png label=Applications
		Program icon=music.png label=Audacity exec=audacity
		Program icon=calculator.png label=Calculator exec=xcalc
		Program icon=gimp.png label=Gimp exec=gimp
		Program icon=chat.png label=Pidgin exec=pidgin
		Program icon=www.png label=Firefox exec=firefox
		Program icon=editor.png label=XEdit exec=xedit
		Program icon=editor.png label='X Win Info' exec=xwininfo
	Menu icon=folder.png label=Utilities
		Program icon=font.png label=Fonts exec=xfontsel
		Program icon=window.png label='Window Properties'
			exec 'xprop | xmessage -file -'
		Program icon=window.png label='Window Information'
			exec 'xwininfo | xmessage -file -'
	Seperator
	Program icon=lock.png label=Lock
		exec 'xlock -mode blank'
	Separator
	Restart label=Restart icon=restart.png
	Exit label=Exit confirm=true icon=quit.png
	
Group options=tiled,aerosnap
Group class=Pidgin options=sticky
Group name=xterm options=vmax
Group name=xclock options=drag,notitle

# Tray at the top
Tray x=0 y=0 autohide=off
	TrayButton icon=jwm-blue.svg action=root:1
	TrayButton label=_ action=showdesktop
	Pager labeled=true
	TaskList maxwidth=246
	Battery
	Dock
	Clock format=%H:%M:%S
		Button mask=123 action=exec:xclock
		
##################
# Visual Styles
##################

WindowStyle font='DejaVu Sans Mono' style=bold width=4 height=21 corner3
	+ foreground=#FFFFFF background=#555555 outline=#000000 opacity=0.5
	active foreground=#FFFFFF background=#0077cc outline=#000000 opacity=0.5

TrayStyle group=true list=all font='DejaVu Sans Mono' opacity=0.75
	+ background=#333333 foreground=#FFFFFF outline=#000000
	
TaskListStyle font='DejaVu Sans Mono' foreground=#FFFFFF background=#333333
	active foreground=#FFFFFF background=#555555
	
PagerStyle text=#FFFFFF outline=#000000 background=#333333 foreground=#555555
	active foreground=#0077cc background=#004488
	
MenuStyle font='DejaVu Sans Mono' foreground=#FFFFFF background=#333333
	+ opacity=0.65
	active foreground=#FFFFFF background=#0077cc

PopupStyle font='DejaVu Sans Mono' foreground=#000000 background=#999999

# Path where icons can ba found
# IconPath can be listed multiple times to allow searching
# for icons in multiple paths
IconPath /usr/share/icons/wm-icons/32x32-aquafusion
IconPath /usr/local/share/jwm

# Virtual Desktop
# Desktop tags can be contained within Desktops for desktop names.
Desktops width=4 height=1
	# Default background. Note that a Background tag can be
	# contained within a Desktop tag to give a specific background
	# for that desktop.
	Background type=solid #111111
	
DoubleClickSpeed 400
DoubleClickDelta 2
FocusModel sloppy
SnapMode distance=10 on=border
MoveMode opaque
ResizeMode opaque

Keys
	Up
	Down
	Right
	Left
	h left
	j down
	k up
	l right
	Return select
	Escape escape
	
	mask A
		Tab nextstacked
		F4 close
		# desktop#
		F1 root:1
		F2 window
		F10 maximize
		Right rdesktop
		Left ldesktop
		Up udesktop
		Down ddesktop
		
Mouse
	root
		button 4 ldesktop
		button 5 rdesktop
	title
		button 1 move
		button 2 move
		button 3 window
		button 4 shade
		button 5 shade
		button 11 maximize
	
	icon
		button 1 window
		button 2 move
		button 3 window
		button 4 shade
		button 5 shade
		
	border
		button 1 resize
		button 2 move
		button 3 window
	
	close
		button -1 close
		button -2 move
		button -3 close
	
	maximize
		button -1 maximize
		button -2 maxy
		button -3 maxh
		
	minimize
		button -1 minimize
		button 2 move
		button -3 shade
